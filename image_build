pipeline(){
  agent{
    label 'node'
  }
  stages(){
    stage('build'){
      steps{
         sh '''
         docker build -t manu1 /root/docker
         '''
      }
    }
    stage('container'){
      steps{
         sh '''
         docker run -d --name C3 -p 9002:80 manu1 bash
         '''
      }
    }
    stage('tagging'){
      steps{
        sh '''
        docker tag manu1:latest manoharf44/manu1:latest
        '''
      }
    }
    stage('pushing'){
      steps{
        sh '''
        docker login
        docker push manoharf44/manu1:latest
        '''
      }
    }
  }
}
